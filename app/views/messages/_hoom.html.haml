.hoom
  .left
    .header
      %hi.header__top
        Lifeshare
      .header__logo
        .header__logo__user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'house-user', class:'icon')
    .side
      .side__header
        %h3.side__header__group
          グループリスト
        .side__header__new
          = link_to new_group_path do
            = icon('fas', 'people-arrows', class:'edit')
      .side__group
        - current_user.groups.each do |group|
          .side__group__list
            = link_to group_messages_path(group), class:"a" do
              .side__group__list__name
                = group.name
